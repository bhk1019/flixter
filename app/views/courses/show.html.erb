<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <%= image_tag @course.image, class: "mx-auto d-block img-fluid" %>
  <br />

  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <span class="badge badge-info">
        <%= number_to_currency @course.cost %>
      </span>
      <% if current_user && current_user == @course.user %>
        <br />
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-primary' %>
      <% end %>
      <br />
      <br />

      <% if current_user && current_user.enrolled_in?(@course) %>
        <h3 class="badge badge-info">You are Enrolled!</h3>
      <% else %>
        <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
      <% end %>
    </div>
    <div class="col-sm-8 col-12">
      <%= @course.description %>
    </div>
  </div>

  <div class="col-12">
    <% @course.sections.each do |section| %>
      <br />
      <div class="section">
        <h3 class="text-center">
          <%= section.title %>
        </h3>
        <br />
        <div class="row">
          <% section.lessons.each do |lesson| %>
            <div class="col-12 col-sm-6">
              <div class="lesson text-center">
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %></b>
                  <br />
                  <%= lesson.subtitle %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class="clr"/>
      </div>
    <% end %>
  </div>
</div>