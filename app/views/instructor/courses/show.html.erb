<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  <%= image_tag @course.image, class: "mx-auto d-block img-fluid" %>
  <br />
  <div class="text-center">
    <%= link_to 'Add a new section', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
    <%= link_to 'View course as student', course_path(current_course), class: 'btn btn-warning float-right btn-lg' %>
  </div>

  <br class="clr" />

  <h4 class="text-center">Sections</h4>
  <br />
  <ul>
    <% current_course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to "New Lesson", new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-sm float-right' %>
        <br class="clr" />
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class='clr' />
      </li>
    <% end %>
  </ul>
</div>